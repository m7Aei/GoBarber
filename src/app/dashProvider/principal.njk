{% extends "_layouts/default.njk" %}

{% block body %}
  <div>
    <strong>Agendamentos disponiveis</strong>
    <p>Aqui esta seu agendamento para o dia de hoje: </p>

    <ul class="providers">
      {% for appointments in appointments %}
        <li class="provider">
          <div>
            <img src="/files/{{ appointment.user.avatar }}" />
            <strong>
              {{ appointment.user.name }}
              <br>
              {{ appointment.date | date("HH:mm") }}
            </strong>
          </div>
        </li>
      {% endfor %}
    </ul>

    <a href="/app/dashboard" class="logout">Voltar</a>
  </div>
{% endblock %}
